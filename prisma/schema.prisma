generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(uuid())
  email   String   @unique
  empires Empire[]
}

model Empire {
  id        String   @id @default(uuid())
  name      String   @unique
  turns     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  worlds    World[]
}

model World {
  id        String  @id @default(uuid())
  name      String  @unique
  locationX Int
  locationY Int
  owner     Empire? @relation(fields: [ownerId], references: [id])
  ownerId   String?
  system    System  @relation(fields: [systemId], references: [id])
  systemId  String
}

model System {
  id     String  @id @default(uuid())
  name   String  @unique
  worlds World[]
}
